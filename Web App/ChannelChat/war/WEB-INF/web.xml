<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>ChatSignIn</servlet-name>
		<servlet-class>channel.experiment.view.SignOnServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ChatBox</servlet-name>
		<servlet-class>channel.experiment.view.ChatBoxServlet</servlet-class>
	</servlet>	
	<servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>channel.experiment.view.SignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NameCheck</servlet-name>
        <servlet-class>channel.experiment.view.NameCheckServlet</servlet-class>
    </servlet>
	
	<servlet-mapping>
		<servlet-name>ChatSignIn</servlet-name>
		<url-pattern>/signin.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChatBox</servlet-name>
		<url-pattern>/chat.do</url-pattern>
	</servlet-mapping>	
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/signout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NameCheck</servlet-name>
        <url-pattern>/namecheck.do</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>Site</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
