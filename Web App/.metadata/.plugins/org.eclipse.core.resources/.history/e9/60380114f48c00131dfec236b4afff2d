package webrtc.eval.model;

import java.util.ArrayList;
import java.util.Iterator;

import javax.persistence.ElementCollection;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

@Entity
public class Client {
	String cName;
	Clinic cClinic;
	
	@ElementCollection
	ArrayList<Integer> cPatientIDs;
	
	@Id @GeneratedValue
	int id;
	
	public Client(String name, String password, String userName){
		this.cName = name;
		this.password_hash = password;
		complete = false;
		cPatientIDs = new ArrayList<Integer>();
		this.cClinic = null;
		this.userName = userName;
	}
	
	public Client(String name, Clinic clinic, String password, String userName){
		this.cName = name;
		this.cClinic = clinic;
		this.password_hash = password;
		complete = true;
		cPatientIDs = new ArrayList<Integer>();
		this.userName = userName;
	}

	public String getcName() {
		return cName;
	}

	public void setcName(String cName) {
		this.cName = cName;
	}

	public int getcID() {
		return id;
	}

	public Clinic getcClinic() {
		return cClinic;
	}

	public ArrayList<Integer> getcPatientIDs() {
		return cPatientIDs;
	}
	
	public boolean isPatientPresent(int pID){
		Iterator<Integer> it = cPatientIDs.iterator();
		while(it.hasNext()){
			int p = it.next();
			if(p == pID)
				return true;
		}
		return false;
	}

	public String getUserName(){
		return userName;
	}
	
	public void addPatient(Patient p){
		cPatientIDs.add(p.getId());
	}
	
	public String getPassword(){
		return password_hash;
	}

	@Override
	public String toString() {
		return "Client [cName=" + cName + ", cID=" + id + ", cClinic="
				+ cClinic + ", cPatientIDs=" + cPatientIDs + "]";
	}
	
}
