package webrtc.eval.model;

import java.util.ArrayList;

import javax.persistence.ElementCollection;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

@Entity
public class Client {
	String cName;
	Clinic cClinic;
	@ElementCollection
	ArrayList<Integer> cPatientIDs;
	String password_hash;
	
	@Id @GeneratedValue
	int id;
	
	public Client(String name, Clinic clinic, String password){
		this.cName = name;
		this.cClinic = clinic;
		this.password_hash = password;
		
		cPatientIDs = new ArrayList<Integer>();
	}

	public String getcName() {
		return cName;
	}

	public void setcName(String cName) {
		this.cName = cName;
	}

	public int getcID() {
		return id;
	}

	public Clinic getcClinic() {
		return cClinic;
	}

	public ArrayList<Integer> getcPatientIDs() {
		return cPatientIDs;
	}

	public void setcPatientIDs(ArrayList<Integer> cPatientIDs) {
		this.cPatientIDs = cPatientIDs;
	}
	
	public String getPassword(){
		return password_hash;
	}

	@Override
	public String toString() {
		return "Client [cName=" + cName + ", cID=" + id + ", cClinic="
				+ cClinic + ", cPatientIDs=" + cPatientIDs + "]";
	}
	
}
