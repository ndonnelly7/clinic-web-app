package sql.test;

import java.io.IOException;
import javax.servlet.http.*;

@SuppressWarnings("serial")
public class BookServlet extends HttpServlet {
	public void doGet(HttpServletRequest req, HttpServletResponse resp)
			throws IOException {
		String bT, date, a, p;
		int id;
		
		bT = req.getParameter("title");
		date = req.getParameter("release");
		a = req.getParameter("author");
		p = req.getParameter("publisher");
		String temp = req.getParameter("id");
		if(temp != null && temp != "")
			id = Integer.parseInt(temp);
		else
			id = -1;
		
		FullWork work = new FullWork(bT, id);
		work.setBook(new BookPart(bT, a, p, date));
		
		resp.setContentType("text/plain");
		resp.getWriter().println("Hello, world");
	}
}
