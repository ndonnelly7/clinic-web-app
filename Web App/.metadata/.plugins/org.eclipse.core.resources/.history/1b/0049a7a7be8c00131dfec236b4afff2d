package webrtc.eval.model;

import java.util.ArrayList;
import java.util.Iterator;

import javax.persistence.CascadeType;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.ManyToMany;

@Entity
public class Client {
	String cName;
	Clinic cClinic;
	
	@ManyToMany(fetch=FetchType.LAZY, cascade = CascadeType.ALL, mappedBy="clinicians")
	ArrayList<Patient> cPatientIDs;
	
	String password_hash;
	
	@Id @GeneratedValue
	int id;
	
	public Client(String name, Clinic clinic, String password){
		this.cName = name;
		this.cClinic = clinic;
		this.password_hash = password;
		
		cPatientIDs = new ArrayList<Patient>();
	}

	public String getcName() {
		return cName;
	}

	public void setcName(String cName) {
		this.cName = cName;
	}

	public int getcID() {
		return id;
	}

	public Clinic getcClinic() {
		return cClinic;
	}

	public ArrayList<Patient> getcPatientIDs() {
		return cPatientIDs;
	}
	
	public Patient findPatient(int pID){
		Iterator<Patient> it = cPatientIDs.iterator();
		while(it.hasNext()){
			Patient p = it.next();
			if(p.getId() == pID){
				return p;
			}
		}
		return null;
	}

	public void addPatient(Patient p){
		cPatientIDs.add(p);
	}
	
	public String getPassword(){
		return password_hash;
	}

	@Override
	public String toString() {
		return "Client [cName=" + cName + ", cID=" + id + ", cClinic="
				+ cClinic + ", cPatientIDs=" + cPatientIDs + "]";
	}
	
}
