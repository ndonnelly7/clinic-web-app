	<script>
	function subClick() {
		
		$("#name").prop('disabled',true);
		$("#address").prop('disabled',true);
		$("#dob").prop('disabled',true);
		$("#number").prop('disabled',true);
		$("#email").prop('disabled',true);
		
		$('#key').val(Math.floor((Math.random()*899)+100));
		
		addCustomer(Customer($("#name").val(), 
				$("#address").val(),
				$("#number").val(),
				$("#email"),
				$("#dob").val(),
				$("#key").val()));
		
		alert("Adding customer");
	};
	
	$(function() {
		$( "#pickdate" ).datepicker({
			changeMonth: true,
			changeYear: true,
			yearRange: "1900:" + (new Date()).getFullYear(),
			dateFormat: "dd/MM/yy"
		});
	});
	</script>
   
