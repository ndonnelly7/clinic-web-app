package webrtc.eval.model;

import java.util.ArrayList;

import javax.persistence.ElementCollection;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

@Entity
public class Patient {

	private String ppsn;
	@Id @GeneratedValue
	private int id;
	
	@ElementCollection
	private ArrayList<Integer> clinicians;
	private int clinic;
	
	public Patient(String ppsn, int id, Client addingClient, int clinic) {
		super();
		this.ppsn = ppsn;
		this.id = id;
		clinicians = new ArrayList<Integer>();
		clinicians.add(addingClient.getcID());
		
		this.clinic = clinic;
	}

	public ArrayList<Integer> getClinicians() {
		return clinicians;
	}

	public void addClinician(Client c){
		clinicians.add(c.getcID());
	}

	public int getClinicID() {
		return clinic;
	}

	public void setClinicID(int clinic) {
		this.clinic = clinic;
	}

	public String getPpsn() {
		return ppsn;
	}

	public int getId() {
		return id;
	}

	@Override
	public String toString() {
		return "Patient [ppsn=" + ppsn
				+ ", id=" + id + ", clinicians=" + clinicians + ", clinic="
				+ clinic + "]";
	}
	
}
