package webrtc.eval.model;

import java.util.ArrayList;

import javax.persistence.ElementCollection;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;

@Entity
public class Patient {

	private String ppsn;
	@Id @GeneratedValue(strategy = GenerationType.IDENTITY)
	private long id;
	
	@ElementCollection
	private ArrayList<Long> clinicians;
	private int clinicID;
	
	public Patient(String ppsn, Client addingClient, int clinic) {
		super();
		this.ppsn = ppsn;
		clinicians = new ArrayList<Long>();
		clinicians.add(addingClient.getcID());
		
		this.clinicID = clinic;
	}

	public ArrayList<Long> getClinicians() {
		return clinicians;
	}

	public void addClinician(Client c){
		clinicians.add(c.getcID());
	}

	public int getClinicID() {
		return clinicID;
	}

	public void setClinicID(int clinic) {
		this.clinicID = clinic;
	}

	public String getPpsn() {
		return ppsn;
	}

	public long getId() {
		return id;
	}

	@Override
	public String toString() {
		return "Patient [ppsn=" + ppsn + ", id=" + id
				+ ", clinicians=" + clinicians + ", clinic="
				+ clinicID + "]";
	}
	
}
